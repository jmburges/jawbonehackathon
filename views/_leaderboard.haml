.row
  .col-md-6
    %h3 Healthy Hotspots
    %ul
      - @top5.each do |id|
        %li 
          %span{:class=>"label label-default"}
            %img{:src=>"#{@locations[id]["venue"]["categories"][0]["icon"]}"}
            = @locations[id]["venue"]["categories"][0]["name"]
          %a{:href=>"#{@locations[id]["venue"]["url"]}"} 
            %h4 
              = @locations[id]["venue"]["name"]
              %span.label.label-warning #{@locations[id]["health_score"]}
  .col-md-6
    %h3 Danger Zones
    %ul
      - @bottom5.each do |id|
        %li 
          %span{:class=>"label label-default"}
            %img{:src=>"#{@locations[id]["venue"]["categories"][0]["icon"]}"}
            = @locations[id]["venue"]["categories"][0]["name"]
          %a{:href=>"#{@locations[id]["venue"]["url"]}"} 
            %h4 
              = @locations[id]["venue"]["name"]
              %span.label.label-warning #{@locations[id]["health_score"]}